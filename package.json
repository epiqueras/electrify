{
  "name": "electrifyjs",
  "version": "0.5.2",
  "description": "A scaffolding tool for making desktop apps from websites.",
  "main": "dist/index.js",
  "files": [
    "src",
    "template",
    "dist"
  ],
  "scripts": {
    "lint": "xo",
    "precommit": "yarn lint",
    "prepush": "yarn lint",
    "start": "babel ./src -d ./dist -w",
    "build": "babel ./src -d ./dist",
    "clean": "rimraf ./dist",
    "prepublish": "yarn lint && yarn run clean && yarn run build"
  },
  "bin": {
    "electrify": "dist/index.js"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/epiqueras/electrify.git"
  },
  "keywords": [
    "Electron",
    "Generator",
    "Boilerplate",
    "Desktop",
    "App"
  ],
  "author": "epiqueras",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/epiqueras/electrify/issues"
  },
  "homepage": "https://github.com/epiqueras/electrify#readme",
  "xo": {
    "ignores": [
      "template/**"
    ],
    "semicolon": false,
    "space": 2,
    "rules": {
      "curly": [
        "error",
        "multi-line"
      ],
      "object-curly-spacing": [
        "error",
        "always"
      ],
      "comma-dangle": [
        "error",
        "always-multiline"
      ],
      "no-return-assign": "off",
      "import/no-unassigned-import": "off"
    }
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.4.0",
    "husky": "^0.13.3",
    "rimraf": "^2.6.1",
    "xo": "^0.18.1"
  },
  "dependencies": {
    "babel-polyfill": "^6.23.0",
    "colors": "^1.1.2",
    "prompt": "^1.0.0"
  }
}
